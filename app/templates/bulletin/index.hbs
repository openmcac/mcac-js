<div class="bulletin">
  <div class="cover">
    <h1 class="bulletin-info">
      <span class="name">{{model.name}}</span><br/>
      <small class="description">{{model.description}}</small>
    </h1>
  </div>

  <div class="bulletin-contents">
    <div class="inner">
      <div class="container">
        <div class="row">
          <section class="col-sm-6 service-order">
            {{{model.serviceOrderHtml}}}
          </section>
          <section class="col-sm-6 announcements">
            <ol>
              {{#each model.sortedAnnouncements as |announcement|}}
              <li>
                <div class="announcement">
                  {{{announcement.descriptionHtml}}}
                </div>
                {{#with announcement.url}}
                  <div>
                    <a class="external-link" href="{{announcement.url}}">
                      See more
                    </a>
                  </div>
                {{/with}}
              </li>
              {{else}}
              <li>No announcements yet</li>
              {{/each}}
            </ol>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
