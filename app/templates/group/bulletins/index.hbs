<table class="table table-striped" data-auto-id="bulletins">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  {{#each sortedBulletins as |bulletin|}}
    <tbody>
      <tr class="bulletin bulletin-{{bulletin.id}}" data-auto-id="bulletin">
        <td class="bulletin-name" data-auto-id="name">{{bulletin.name}}</td>
        <td>{{bulletin.publishedAt}}</td>
        <td>
          {{#link-to 'group.bulletin.index' bulletin
                     class='btn btn-primary show-bulletin'}}
            Show
          {{/link-to}}

          {{#link-to 'group.bulletin.edit' bulletin
                     class='btn btn-primary edit-bulletin'}}
            Edit
          {{/link-to}}

          <button class="btn btn-danger remove-bulletin" data-auto-id="remove"
                  {{action 'remove' bulletin}}>Delete</button>
        </td>
      </tr>
    </tbody>
  {{/each}}
</table>
