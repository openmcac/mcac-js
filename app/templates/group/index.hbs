<div class="container group-index" data-auto-id="group">
  <div class="row">
    {{#if posts.length}}
      <section class="col-md-7 offset-lg-1 col-lg-6 latest-news"
        data-auto-id="group-posts">
        <h2>Latest news</h2>
        <div>
          {{#each posts as |post|}}
            <div data-auto-id="post">
              {{post-view post=post snippets=true}}
            </div>
          {{/each}}
          {{paginate-collection totalPages=totalPages currentPage=number setCurrentPage=(action "setCurrentPage")}}
        </div>
      </section>
    {{/if}}
    <section class="col-md-5 col-lg-4 about-group">
      <h2>About</h2>
      {{{group.aboutHtml}}}
    </section>
  </div>
</div>
