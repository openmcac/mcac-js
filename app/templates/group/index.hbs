<div class="container group-index" data-auto-id="group">
  {{#if posts.length}}
    <div class="row latest-news">
      <section class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6"
        data-auto-id="group-posts">
        <h2>Latest news</h2>
        {{#each posts as |post|}}
          <div data-auto-id="post">
            {{post-view post=post snippets=true}}
          </div>
        {{/each}}
      </section>
    </div>
  {{/if}}

  <div class="row about-group">
    <section class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
      <h2>About {{group.name}}</h2>
      {{{group.aboutHtml}}}
    </section>
  </div>
</div>
