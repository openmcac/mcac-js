<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  {{#each model as |group|}}
    <tbody>
      <tr class="group group-{{group.id}}">
        <td class="group-name">{{group.name}}</td>
        <td>
          {{#link-to 'group.index' group.slug
                     class='btn btn-primary show-group'}}
            Show
          {{/link-to}}

          {{#link-to 'group.edit' group.slug class='btn btn-primary edit-group'}}
            Edit
          {{/link-to}}

          <button class="btn btn-danger remove-group"
                  {{action 'remove' group}}>Delete</button>
        </td>
      </tr>
    </tbody>
  {{/each}}
</table>

{{outlet}}
