<div class="row">
  <div class="form-group col-md-10">
    <label for="name">Name</label>
    {{input value=model.name class="form-control name"}}
  </div>
</div>
<div class="row">
  <div class="form-group col-md-10">
    <label for="slug">Slug</label>
    {{input value=model.slug class="form-control slug"}}
  </div>
</div>
<div class="row">
  <div class="form-group col-md-10">
    <label for="banner">Banner</label>
    <div class="form-control banner">
      {{s3-upload url="/api/v1/groups/sign" didupload="didUploadBanner"}}
    </div>
    {{image-preview url=model.bannerUrl clearimage=(action "clearBanner")}}
  </div>
</div>
<div class="row">
  <div class="form-group col-md-10">
    <label for="about">About</label>
    {{textarea value=model.about class="form-control about"}}
  </div>
</div>
<button type="submit"
        {{action 'save'}}
        class="btn btn-primary save-group">
  Save
</button>
