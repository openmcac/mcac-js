<article class="page" data-auto-id="page-view">
  {{#if page.title}}
    <h1 data-auto-id="title">
      {{#link-to "page.index" page}}{{page.title}}{{/link-to}}
    </h1>
  {{/if}}
  <div class="details">
    {{#link-to "page.index" page}}
      <span data-auto-id="published-at">{{displayPublishedAt}}</span>
    {{/link-to}}
  </div>
  {{#if page.bannerUrl}}
    <div class="banner"
            style="background-image: url('{{cloudinary-fetch url=page.bannerUrl width=1920}}')"
            data-auto-id="page-view-banner">
    </div>
  {{/if}}
  <div class="content" data-auto-id="content">
    {{#if snippets}}
      {{markdown-to-html page.snippet}}

      {{#if page.showReadMoreLink}}
        <div class="read-more">
          <div class="read-more-handle">
            {{#link-to "page.index" page}}
              <i class="icon icon-angle-right"></i>
              Read more
            {{/link-to}}
          </div>
        </div>
      {{/if}}
    {{else}}
      {{markdown-to-html page.content}}
    {{/if}}
  </div>
</article>
{{yield}}
