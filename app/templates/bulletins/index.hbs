<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  {{#each model as |bulletin|}}
    <tbody>
      <tr class="bulletin bulletin-{{bulletin.id}}">
        <td class="bulletin-name">{{bulletin.name}}</td>
        <td>{{bulletin.publishedAt}}</td>
        <td>
          {{#link-to 'bulletin.index' bulletin
                     class='btn btn-primary show-bulletin'}}
            Show
          {{/link-to}}

          {{#link-to 'bulletin.edit' bulletin
                     class='btn btn-primary edit-bulletin'}}
            Edit
          {{/link-to}}

          <button class="btn btn-danger remove-bulletin"
                  {{action 'remove' bulletin}}>Delete</button>
        </td>
      </tr>
    </tbody>
  {{/each}}
</table>
