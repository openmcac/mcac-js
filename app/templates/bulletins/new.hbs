<div class="container">
  <h2>Add a bulletin</h2>

  <form class="bulletin-form" action="#">
    <div class="row">
      <section class="service-information col-md-6">
        <h3>Service Information</h3>

        <div class="row">
          <div class="form-group col-md-10">
            <label for="bulletinName">Name</label>
            {{input id="bulletinName" value=name class="form-control"}}
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-10">
            <label for="publishedAt">Published at</label>
            {{bs-datetimepicker date=publishedAt}}
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-10">
            <label for="description">Description</label>
            {{input id="description" value=description class="form-control"}}
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-12">
            <label for="serviceOrder">Order</label>
            {{markdown-textarea id="serviceOrder"
                                value=serviceOrder
                                class="form-control"
                                rows="10"}}
          </div>
        </div>

        <button type="submit" {{action 'save'}} class="btn btn-primary">
          Save
        </button>
      </section>

      <section class="announcements col-md-6">
        <h3>Announcements</h3>
        {{announcements-editor announcements=model.announcements}}
      </section>
    </div>
  </form>
</div>
