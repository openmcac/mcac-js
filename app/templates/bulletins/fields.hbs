<section class="service-information col-md-6" data-test-id="bulletin-form">
  <h3>Service Information</h3>

  <div class="row">
    <div class="form-group col-md-10 {{if errors.model.name "has-error" ""}}"
      data-test-id="name">
      <label class="control-label" for="bulletinName">Name {{errors.model.name}}</label>
      {{input id="bulletinName"
              value=model.name
              class="form-control bulletin-name"
              data-auto-id="bulletin-name"}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-10 {{if errors.model.publishedAt "has-error" ""}}"
      data-test-id="published-at">
      <label class="control-label" for="publishedAt">Published at {{errors.model.publishedAt}}</label>
      {{bs-datetimepicker class="published-at"
                          date=model.publishedAt
                          updateDate=(action (mut model.publishedAt))
                          data-auto-id="bulletin-published-at"}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-10" data-test-id="description">
      <label for="description">Description</label>
      {{input id="description"
              value=model.description
              class="form-control description"
              data-auto-id="bulletin-description"}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-10">
      <label for="banner">Banner</label>
      <div class="form-control banner">
        {{s3-upload url="/api/v1/bulletins/sign" didUpload="didUploadBanner"}}
      </div>
      {{image-preview url=model.bannerUrl}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-10">
      <label for="audio">Audio</label>
      <div class="form-control audio">
        {{s3-upload url="/api/v1/bulletins/sign" didUpload="didUploadAudio"}}
      </div>
      {{file-preview url=model.audioUrl}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-12" data-test-id="service-order">
      <label for="serviceOrder">Order</label>
      {{markdown-textarea id="serviceOrder"
                          value=model.serviceOrder
                          class="form-control service-order"
                          data-auto-id="bulletin-service-order"
                          rows="10"}}
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-12" data-test-id="sermon-notes">
      <label for="sermonNotes">Notes</label>
      {{markdown-textarea id="sermonNotes"
                          value=model.sermonNotes
                          class="form-control sermon-notes"
                          data-auto-id="bulletin-sermon-notes"
                          rows="10"}}
    </div>
  </div>

  <button type="submit"
          {{action 'save'}}
          class="btn btn-primary save-bulletin"
          disabled={{disableSaveButton}}>
    Save
  </button>
</section>
